{% extends 'Admin/base.html.twig' %}

{% block body %}
    <h1>Commandes list</h1>

    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>Date</th>
                <th>Reference</th>
                <td>Client</td>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commande in commandes %}
            <tr>
                <td>{% if commande.date %}{{ commande.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ commande.reference }}</td>
                <td>{{ commande.utilisateur.username }}</td>
                <td><a href="{{ path('admin_commandes_show', { 'id': commande.id }) }}"><i class="icon-book"></i></a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
